{
  "manifest_version": 2,
  "name": "Amplifier",
  "short_name": "Amplifier",
  "description": "Enable streamlined, easy-to-use web content on websites that offer it.",
  "version": "1.1.0",
  "author": "Amplifier Team",
  "icons": { 
           "48": "amplifier48.png",
          "128": "amplifier128.png" 
  },
  "background" : {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "js": ["amplifier.js"],
      "matches": ["http://*/*","https://*/*"],
      "run_at" : "document_start"
    }
  ],
  "page_action" : {
    "default_icon" : "switcher.png",
    "default_title" : "None.",
    "default_popup" : "popup.html"
  },
  "permissions": [
    "storage",
    "activeTab"
  ]
}
